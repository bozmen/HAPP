<div class="container">
   <%= form_for(:session, url: login_path, html: {class: "form-signin"}) do |f| %>
   <h2 class="form-signin-heading">Please sign in</h2>
   <label for="inputEmail" class="sr-only">Email address</label>
   <%= f.text_field :email, class: "form-control", placeholder: "Email address", required: true %>
   <label for="inputPassword" class="sr-only">Password</label>
   <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
   <div class="checkbox">
      <label>	
      <%= f.hidden_field :type, value: "patient" %>
      <input type="checkbox" value="remember-me"> Remember me
      </label>
   </div>
   <%= f.submit "Sign in", class:"btn btn-lg btn-primary btn-block"  %>
   <% end %>
</div>