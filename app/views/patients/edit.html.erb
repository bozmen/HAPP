<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-3">
    </div>
    <div class="col-xs-12 col-sm-6">
    <%= form_for @patient, url: patient_path(@patient) do |f| %>
    <%# form_for(:session, url: login_path, html: {class: "form-signin"}) do |f| %>
    <h2 class="form-signin-heading" style="text-transform: capitalize;"><%= current_user.name +  " " + current_user.surname %> - Profile Edit</h2>
    <label class="sr-only"> Name </label>
    <%= f.text_field :name, class: "form-control", placeholder: "Name", required: true %>
    <label class="sr-only"> Surname </label>
    <%= f.text_field :surname, class: "form-control", placeholder: "Surname", required: true %>
    <label class="sr-only"> Email </label>
    <%= f.email_field :email, class: "form-control", placeholder: "Email", required: true %>
    <label for="inputPassword" class="sr-only">Password</label>
    <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
    <label for="inputPassword" class="sr-only">Password Confirmation</label>
    <%= f.password_field :password, class: "form-control", placeholder: "Password Confirmation", required: true %>
    <%= f.file_field :avatar, class: "form-control", 'data-buttonText': "Find file" %>
    <%= f.submit "Update", class:"new-button btn btn-lg btn-primary btn-block"  %>
    <% end %>
    </div>
  </div>
</div>

<script>
$(":file").filestyle({buttonText: "Click here to select avatar"});
</script>